<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/activity_main"
    android:weightSum="1">


    <TextView
        android:id="@+id/tv_random_bottle_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:scrollHorizontally="true"
        android:scrollbars="vertical"
        android:text="@string/tv_result"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/ib_random_bottle_image"
        android:background="@color/colorWhite"
        android:layout_width="0dp"
        android:layout_height="292dp"
        android:adjustViewBounds="true"
        android:onClick="detailButtonHandler"
        android:scaleType="fitCenter"
        android:textAlignment="center"
        app:srcCompat="@drawable/none_bottle"
        android:contentDescription="@string/bottle"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_random_bottle_producer"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_random_bottle_producer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="@string/textview"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button_get_bottle"
        app:layout_constraintRight_toRightOf="@+id/ib_random_bottle_image"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/ib_random_bottle_image" />

    <Button
        android:id="@+id/button_get_bottle"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:hapticFeedbackEnabled="true"
        android:layout_width="0dp"
        android:layout_height="117dp"
        android:onClick="makeLcboQuery"
        android:text="@string/btn_get_bottle"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv_random_bottle_producer"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_random_bottle_producer" />
</android.support.constraint.ConstraintLayout>